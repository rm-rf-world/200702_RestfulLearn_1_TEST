<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yichaoinc.RESTfulLearn.dao.UserMapper">
    <select id="findUserByIdAndPassword"
            parameterType="com.yichaoinc.RESTfulLearn.domain.User"
            resultType="com.yichaoinc.RESTfulLearn.domain.User">
        select * from user_inf where user_id = {#id} user_password = {#password}"
    </select>

    <select id="findUserId" parameterType="int" resultType="String">
        select user_password from user_inf where user_id = {#id};
    </select>

    <select id="getStudent" parameterType="_int" resultType="Student">
        select * from student where id=#{id}
    </select>
</mapper>